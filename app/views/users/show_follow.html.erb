<!-- dosent use current user anywhere so the same links work for other users -->

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>posts:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
     <!-- put facebook picture here -->
    </section>
  </aside>
  <div class="col-md-8">
    <!-- <h3><%= @title %></h3> -->
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
 <!-- will paginate goes here -->
    <% end %>
  </div>
</div>