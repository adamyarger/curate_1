
<p class="date">
	Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</p> 
<p class="body">
	<%= @post.body_html %>
</p>
<p class="body">
	<%= @post.user.name %>
</p>
<p class="body">
	<%= @post.get_upvotes.size %> Likes
</p>
<p>
<%= link_to "Like", like_post_path(@post), method: :get %>
